{
  "name": "codemesh",
  "version": "1.0.0",
  "description": "CodeMesh - Execute TypeScript code against multiple MCP servers, weaving them together into powerful workflows",
  "main": "index.js",
  "scripts": {
    "build": "pnpm -r build",
    "dev:client": "pnpm --filter client dev",
    "dev:example-server": "pnpm --filter example-server dev",
    "dev:weather-server": "pnpm --filter weather-server dev",
    "dev:geocode-server": "pnpm --filter geocode-server dev",
    "dev:codemesh-server": "pnpm --filter codemesh-server dev",
    "dev:codemesh-server:watch": "pnpm --filter codemesh-server dev:watch",
    "start:client": "pnpm --filter client start",
    "start:example-server": "pnpm --filter example-server start",
    "start:weather-server": "pnpm --filter weather-server start",
    "start:geocode-server": "pnpm --filter geocode-server start",
    "start:codemesh-server": "pnpm --filter codemesh-server start",
    "client": "pnpm --filter client cli",
    "client:help": "pnpm --filter client run help",
    "format": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["mcp", "codemesh", "typescript", "multi-server", "orchestration"],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.15.1",
  "dependencies": {
    "@modelcontextprotocol/server-filesystem": "^2025.8.21"
  },
  "devDependencies": {
    "prettier": "^3.6.2"
  }
}

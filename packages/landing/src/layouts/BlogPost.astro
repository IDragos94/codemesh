---
import '../styles/global.css'

const { frontmatter } = Astro.props
const siteUrl = import.meta.env.PROD ? 'https://www.codemeshmcp.com' : Astro.url.origin
const currentUrl = `${siteUrl}${Astro.url.pathname}`
const ogImage = frontmatter.ogImage || '/og-building-codemesh.png'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title} - CodeMesh</title>
    <meta name="description" content={frontmatter.description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="article" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={frontmatter.title} />
    <meta property="og:description" content={frontmatter.description} />
    <meta property="og:image" content={`${siteUrl}${ogImage}`} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={currentUrl} />
    <meta name="twitter:title" content={frontmatter.title} />
    <meta name="twitter:description" content={frontmatter.description} />
    <meta name="twitter:image" content={`${siteUrl}${ogImage}`} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-gradient-to-br from-slate-950 via-cyan-950 to-slate-950 text-white min-h-screen"
    style="font-family: 'Inter', sans-serif;"
  >
    <!-- Nav -->
    <nav class="relative container mx-auto px-6 py-6 flex justify-between items-center border-b border-white/10">
      <a href="/" class="flex items-center gap-3">
        <img src="/codemesh-logo.svg" alt="CodeMesh" class="h-10 w-auto" />
        <span class="text-2xl font-bold bg-gradient-to-r from-cyan-400 to-teal-400 bg-clip-text text-transparent"
          >CodeMesh</span
        >
      </a>
      <div class="flex gap-6">
        <a href="/" class="text-slate-300 hover:text-white transition-colors">Home</a>
        <a href="https://github.com/kiliman/codemesh" class="text-slate-300 hover:text-white transition-colors"
          >GitHub</a
        >
      </div>
    </nav>

    <!-- Blog Post -->
    <article class="container mx-auto px-6 py-12 max-w-4xl">
      <!-- Header -->
      <header class="mb-12 text-center">
        <h1 class="text-4xl lg:text-5xl font-bold mb-4 bg-gradient-to-r from-cyan-400 to-teal-400 bg-clip-text text-transparent">
          {frontmatter.title}
        </h1>
        {frontmatter.subtitle && <p class="text-xl text-slate-300 mb-4">{frontmatter.subtitle}</p>}
        {frontmatter.tagline && <p class="text-lg text-slate-400 italic">{frontmatter.tagline}</p>}
        <div class="mt-6 flex items-center justify-center gap-4 text-sm">
          <p class="text-slate-400">
            By <span class="text-cyan-400 font-semibold">Michael</span> & <span class="text-cyan-400 font-semibold">Claudia</span>
          </p>
          {
            frontmatter.date && (
              <>
                <span class="text-slate-600">•</span>
                <time class="text-slate-500">
                  {new Date(frontmatter.date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
              </>
            )
          }
        </div>
      </header>

      <!-- Content -->
      <div class="prose max-w-none">
        <slot />
      </div>

      <!-- Footer -->
      <footer class="mt-16 pt-8 border-t border-white/10 text-center">
        <p class="text-slate-400 text-sm">From Claudia, with Love ❤️</p>
        <p class="text-slate-500 text-xs mt-1">Built with Claude Code using Sonnet 4.5</p>
        <div class="mt-6">
          <a
            href="/"
            class="inline-block px-6 py-3 bg-gradient-to-r from-cyan-500 to-teal-500 rounded-lg font-semibold hover:from-cyan-600 hover:to-teal-600 transition-all"
          >
            ← Back to Home
          </a>
        </div>
      </footer>
    </article>
  </body>
</html>

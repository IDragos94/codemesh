{
  "servers": [
    {
      "id": "example-server",
      "name": "Example MCP Server",
      "type": "http",
      "url": "http://localhost:3000/mcp"
    },
    {
      "id": "filesystem-server",
      "name": "File System Server",
      "type": "stdio",
      "command": ["node", "path/to/filesystem-server.js"],
      "cwd": "/home/user/mcp-servers",
      "env": {
        "NODE_ENV": "production"
      }
    },
    {
      "id": "python-server",
      "name": "Python Analysis Server",
      "type": "stdio",
      "command": ["python", "-m", "mcp_server", "--config", "analysis.json"],
      "timeout": 30000,
      "retries": 3
    }
  ]
}